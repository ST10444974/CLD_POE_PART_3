@model IEnumerable<Venue_Booking_System.Models.BookingsDetailsView>

@{
    ViewData["Title"] = "Detailed Bookings";
}

<h1>Detailed Bookings</h1>

<!-- Filter Form -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row">
        <!-- Search -->
        <div class="col-md-4">
            <label>Search</label>
            <input type="text" name="searchString" class="form-control"
                   placeholder="Booking ID or Event Name"
                   value="@Context.Request.Query["searchString"]" />
        </div>

        <!-- Event Type -->
        <div class="col-md-3">
            <label>Event Type</label>
            <select name="eventType" class="form-control">
                <option value="">All Types</option>
                @foreach (var type in ViewBag.EventTypes)
                {
                    <option value="@type.EventTypeId"
                            selected="@(Context.Request.Query["eventType"] == type.EventTypeId.ToString() ? "selected" : null)">
                        @type.TypeName
                    </option>
                }
            </select>
        </div>

        <!-- Date Range -->
        <div class="col-md-3">
            <label>From Date</label>
            <input type="date" name="startDate" class="form-control"
                   value="@Context.Request.Query["startDate"]" />
        </div>
        <div class="col-md-3">
            <label>To Date</label>
            <input type="date" name="endDate" class="form-control"
                   value="@Context.Request.Query["endDate"]" />
        </div>

        <!-- Availability -->
        <div class="col-md-3 form-check pt-4">
            <input type="checkbox" name="availableOnly" value="true"
                   class="form-check-input" id="availableCheck"
                   @(Context.Request.Query["availableOnly"] == "true" ? "checked" : "") />
            <label class="form-check-label" for="availableCheck">Available Venues Only</label>
        </div>

        <!-- Submit Button -->
        <div class="col-md-3 pt-4">
            <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
        </div>
    </div>
</form>

<!-- Results Table -->
@if (!Model.Any())
{
    <div class="alert alert-warning">No bookings match your criteria.</div>
}
else
{
    <table class="table table-striped table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>Booking ID</th>
                <th>Event Name</th>
                <th>Event Type</th>
                <th>Event Description</th>
                <th>Booking Dates</th>
                <th>Event Dates</th>
                <th>Venue</th>
                <th>Location</th>
                <th>Capacity</th>
                <th>Availability</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BookingId</td>
                    <td>@item.EventName</td>
                    <td>@item.EventType</td>
                    <td>@item.EventDescription</td>
                    <td>@item.BookingStartDate.ToString("yyyy-MM-dd") - @item.BookingEndDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.EventStartDate.ToString("yyyy-MM-dd") - @item.EventEndDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.VenueName</td>
                    <td>@item.VenueLocation</td>
                    <td>@item.VenueCapacity</td>
                    <td>
                        <span class="badge @(item.VenueAvailability ? "bg-success" : "bg-danger")">
                            @(item.VenueAvailability ? "Available" : "Unavailable")
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="Bookings" asp-action="Index" class="btn btn-secondary mt-3">Back to Simple View</a>
