@model Venue_Booking_System.Models.Event

<h1>Event Details</h1>
<div>
    <h4>@Model.EventName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Event Name</dt>
        <dd class="col-sm-9">@Model.EventName</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Event Type</dt>
        <dd class="col-sm-9">@Model.EventType?.TypeName</dd>

        <dt class="col-sm-3">Start Date</dt>
        <dd class="col-sm-9">@Model.EventStartDate.ToString("dd-MMM-yyyy")</dd>

        <dt class="col-sm-3">End Date</dt>
        <dd class="col-sm-9">@Model.EventEndDate.ToString("dd-MMM-yyyy")</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
