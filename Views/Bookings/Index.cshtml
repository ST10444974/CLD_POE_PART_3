@model IEnumerable<Venue_Booking_System.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-warning btn-sm">Create New</a>
</p>
<p>
    <a asp-controller="BookingsView" asp-action="Index" class="btn btn-info">View All Bookings in Detail</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingEndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                
            <td>
                    @Html.DisplayFor(modelItem => item.Venue.VenueName)
            </td>
            <td>
                    @item.Event?.EventType?.TypeName
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingEndDate)
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-warning btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-warning btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
